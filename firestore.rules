rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile, and read other user profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Conversations - TEMPORARY PERMISSIVE RULE FOR TESTING
    match /conversations/{conversationId} {
      // Allow all operations for authenticated users (TEMPORARY)
      allow read, write: if request.auth != null;
    }
    
    // Messages - users can read/write messages in conversations they participate in
    match /conversations/{conversationId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    // Chat tabs - TEMPORARY PERMISSIVE RULE FOR TESTING
    match /chatTabs/{tabId} {
      // Allow all operations for authenticated users (TEMPORARY)
      allow read, write: if request.auth != null;
    }
    
    // Messages collection (standalone) - users can create and read messages for tabs they have access to
    match /messages/{messageId} {
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.senderId;
      
      allow read, update, delete: if request.auth != null && 
        request.auth.uid == resource.data.senderId;
    }
  }
}
